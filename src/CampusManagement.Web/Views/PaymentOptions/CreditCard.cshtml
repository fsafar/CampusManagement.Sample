@model CampusManagement.Web.Models.PaymentOptions.CreditCardViewModel
@{
    ViewData["Title"] = "Credit Card Payment";
}

<h2>Your Credit Card Information</h2>
<div class="alert alert-info">
    <div>@Html.DisplayNameFor(m => m.ChargeAmount): @Html.DisplayFor(m => m.ChargeAmount)</div>
</div>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationSummary()
    </div>
}
<form asp-controller="PaymentOptions" asp-action="CreditCard" method="post">
    <div class="row">
        <div class="col-md-6 mb-3">
            @Html.LabelFor(m => m.Name)
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mb-3">
            @Html.LabelFor(m => m.CardNumber)
            @Html.TextBoxFor(m => m.CardNumber, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.CardNumber)
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mb-3">
            @Html.LabelFor(m => m.ExpirationYear)
            @Html.TextBoxFor(m => m.ExpirationYear, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.ExpirationYear)
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mb-3">
            @Html.LabelFor(m => m.ExpirationMonth)
            @Html.TextBoxFor(m => m.ExpirationMonth, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.ExpirationMonth)
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mb-3">
            @Html.LabelFor(m => m.SecurityCode)
            @Html.TextBoxFor(m => m.SecurityCode, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.SecurityCode)
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mb-3">
            @Html.LabelFor(m => m.StreetAddress)
            @Html.TextBoxFor(m => m.StreetAddress, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.StreetAddress)
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mb-3">
            @Html.LabelFor(m => m.City)
            @Html.TextBoxFor(m => m.City, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.City)
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mb-3">
            @Html.LabelFor(m => m.State)
            @Html.TextBoxFor(m => m.State, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.State)
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mb-3">
            @Html.LabelFor(m => m.ZipCode)
            @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.ZipCode)
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 mb-3">
            @Html.HiddenFor(m => m.ChargeId)
            @Html.HiddenFor(m => m.ChargeAmount)
            <input type="submit" class="btn btn-primary" value="Pay" />
        </div>
    </div>
</form>

